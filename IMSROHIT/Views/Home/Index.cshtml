@model IEnumerable<IMSROHIT.Models.Home>;


<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <style>
        .card {
            border: 3px solid black;
            
        }
        .card-img-top{
	    transition: transform(2s);
	    filter: contrast(2) brightness(1)hue-rotate(20deg) invert(10%) saturate(150%);
      
        }
        .card-img-top:hover{
	    transform: skew(80deg);
        transform: perspective(350px) rotateX(10deg);
        
        
        }
    </style>

    <div class="card-deck mt-3">
        @foreach (var empo in Model)
        {
            var photopath = "~/images/" + (empo.photopath ?? "img1.jpg");
            //<div class="row col-4">
            <div class="card m-3" style="min-width:25rem; max-width:30.5%">
                <div class="card-header">
                    <h3 class="font-weight-bolder text-info text-capitalize">@empo.Name</h3>
                </div>
                <img class="card-img-top" src="@photopath" asp-append-version="true" style="height:350px;" />
                <div class="card-footer text-center">
                    <a asp-controller="Home" asp-action="detail" asp-route-id="@empo.id" class="btn btn-warning">Detail</a>
                    <a class="btn btn-info" asp-controller="Home" asp-action="edit" asp-route-id="@empo.id">Edit</a>
                    <a class="btn btn-danger" asp-controller="Home" asp-action="delete" asp-route-id="@empo.id">Delete</a>
                </div>
            </div>
            //</div>
        }
    </div>
</body>
</html>
